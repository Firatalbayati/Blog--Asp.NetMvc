@model IEnumerable<FiratBlog.Models.Article>

@{
    ViewBag.Title = "CategoryArticles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="col-lg-8">
        <br />
        <br />
        @Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Category.CategoryName).Titled("Kategori Adı").SetWidth(110).Sortable(true).Filterable(true);
    columns.Add(m => m.Title).Titled("Başlık").Sortable(true).Filterable(true);
    columns.Add(m => m.Date).Titled("Tarih").Sortable(true).Filterable(true);
    columns.Add(m => m.Views).Titled("Okuma sayısı").Sortable(true).Filterable(true);
}).WithPaging(4).SetLanguage("tr")

    </div>
</body>

@using GridMvc.Html
<link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"> </script>
