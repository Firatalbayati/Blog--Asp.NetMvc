@model IEnumerable<FiratBlog.Models.Comment>
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <div><h4 class="alert-danger">@ViewBag.Basarisiz</h4></div>
        @foreach (var item in Model)
        {
            if (item.Contents.Length > 33)
            {
                <div>
                    <a href="~/Home/ArticleDetails/@item.ArticleId">@Html.Raw(item.Contents.Substring(0, 33)) ...</a>
                </div>
                    <br />
            }
            else
            {
                <div>
                    <a href="~/Home/ArticleDetails/@item.ArticleId">@Html.Raw(item.Contents) </a>
                </div>
                    <br />
            }
        }
    </div>
</div>
